    "format": "prettier --write .",
    "test": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix && prettier --write ."
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@sola-hq/toolkit": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.0.4",
    "vitest": "^3.2.4"
  }
}
